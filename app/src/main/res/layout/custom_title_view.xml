<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/search_orb_view"
        android:layout_marginTop="20dp"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="28dp"
        android:textAllCaps="false"
        android:textSize="24sp"
        android:textColor="@color/white_text"
        android:visibility="visible"
        tools:text="Trending Now On Flickr" />

    <ImageView
        android:id="@+id/badge_iv"
        android:adjustViewBounds="true"
        android:src="@null"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="12dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:visibility="visible"
        android:contentDescription="@string/title_badge" />

    <androidx.leanback.widget.SearchOrbView
        android:id="@+id/search_orb_view"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_alignParentStart="true"
        android:visibility="visible" />

</merge>